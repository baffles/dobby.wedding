section#details.page-section
	div.container.h-100
		hr.divider.my-4
		div.row.justify-content-center.h-100
			div.map-col.col-lg-4
				iframe.w-100.h-100(src='https://maps.google.com/maps?q=The Queensbury Hotel, Glens Falls, NY&output=embed')
			div.col-lg-8.pt-3.pt-lg-0.text-center
				h2.text-white.mt-8= when
				h5.text-white.mt-2= where
				h6.text-white.mt-2= address
				h4.divider.light.my-4
				div.row.justify-content-center.align-items-center.text-white-50.mb-4
					div.col-sm-2.text-center
						i.fas.fa-3x.fa-clock
					div.details-col.col-sm-6.text-center.text-sm-left!=typogr(contents['time.md'].html).typogrify()
				div.row.justify-content-center.align-items-center.text-white-50.mb-4
					div.col-sm-2.text-center
						i.fab.fa-3x.fa-black-tie
					div.details-col.col-sm-6.text-center.text-sm-left!=typogr(contents['attire.md'].html).typogrify()
				div.row.justify-content-center.align-items-center.text-white-50.mb-4
					div.col-sm-2.text-center
						i.fas.fa-3x.fa-glass-cheers
					div.details-col.col-sm-6.text-center.text-sm-left!=typogr(contents['bar.md'].html).typogrify()
				div.row.justify-content-center.align-items-center.text-white-50.mb-4
					div.col-sm-2.text-center
						i.fas.fa-3x.fa-bed
					div.details-col.col-sm-6.text-center.text-sm-left!=typogr(contents['accommodations-summary.md'].html).typogrify()
				div.row.justify-content-center.align-items-center.text-white-50.mb-4
					div.col-sm-2.text-center
						i.fas.fa-3x.fa-parking
					div.details-col.col-sm-6.text-center.text-sm-left!=typogr(contents['parking.md'].html).typogrify()
				if rsvpEnabled
					button.btn.btn-light(data-toggle='modal', data-target='#rsvp-modal')
						i.fas.fa-check
						|  RSVP!
					|  
				else
					div.text-white-75.mb-4
						h5 Check back later to RSVP!
				a.btn.btn-light(href='other/Dobby_Wedding.ics')
					i.fas.fa-calendar
					|  Add to calendar